---
const experiences = [
  {
    title: 'Senior Software Engineer',
    company: 'Company Name',
    companyUrl: '#',
    date: 'Jan 2023 - Present',
    points: [
      'Led development of scalable backend services handling millions of requests daily',
      'Implemented ML pipelines that improved prediction accuracy by 25%',
      'Mentored junior developers and established best practices for the team',
    ],
  },
  {
    title: 'Software Engineer',
    company: 'Previous Company',
    companyUrl: '#',
    date: 'Jun 2021 - Dec 2022',
    points: [
      'Built RESTful APIs and microservices using Python and FastAPI',
      'Designed and optimized database schemas for high-performance applications',
      'Collaborated with cross-functional teams to deliver features on schedule',
    ],
  },
  {
    title: 'Junior Developer',
    company: 'First Company',
    companyUrl: '#',
    date: 'Jan 2020 - May 2021',
    points: [
      'Developed full-stack features using React and Node.js',
      'Wrote unit and integration tests to ensure code quality',
      'Participated in code reviews and agile development processes',
    ],
  },
]
---

<section id="experience" class="py-24">
  <div class="max-w-5xl mx-auto px-6">
    <h2 class="text-2xl font-bold text-text-primary mb-12 flex items-center gap-4">
      <span class="text-accent font-mono text-lg">02.</span>
      Experience
      <span class="h-px bg-border flex-1 max-w-xs"></span>
    </h2>

    <div class="space-y-12">
      {experiences.map((exp) => (
        <div class="group relative pl-8 border-l border-border hover:border-accent transition-colors">
          <div class="absolute left-0 top-0 w-3 h-3 -translate-x-[7px] rounded-full bg-border group-hover:bg-accent transition-colors"></div>

          <div class="space-y-3">
            <div>
              <h3 class="text-lg font-semibold text-text-primary">
                {exp.title}
                <span class="text-accent">
                  {' @ '}
                  <a
                    href={exp.companyUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hover:underline"
                  >
                    {exp.company}
                  </a>
                </span>
              </h3>
              <p class="text-sm text-text-secondary font-mono">{exp.date}</p>
            </div>

            <ul class="space-y-2">
              {exp.points.map((point) => (
                <li class="text-text-secondary flex gap-3">
                  <span class="text-accent mt-1.5 flex-shrink-0">â–¹</span>
                  <span>{point}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
