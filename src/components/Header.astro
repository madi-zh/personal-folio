---
import ThemeToggle from './ThemeToggle.astro'

const navLinks = [
  { href: '#about', label: 'About' },
  { href: '#projects', label: 'Projects' },
  { href: '#experience', label: 'Experience' },
  { href: '#contact', label: 'Contact' },
]
---

<header class="fixed top-0 left-0 right-0 z-50 bg-background/80 backdrop-blur-md border-b border-border">
  <nav class="max-w-5xl mx-auto px-6 py-4 flex items-center justify-between">
    <a href={import.meta.env.BASE_URL} class="text-lg font-semibold text-text-primary hover:text-accent transition-colors">
      MZ
    </a>
    <div class="flex items-center gap-6">
      <ul class="flex items-center gap-8">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class="text-sm text-text-secondary hover:text-text-primary transition-colors"
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
      <ThemeToggle />
    </div>
  </nav>
</header>
